package station;

import java.util.Date;

import client.Client;

public class TrainStation extends Station{
	
	public TrainStation(){
		System.out.println("make q");
		cq = new ClientQueue();
		System.out.println(cq);
	}
	
	//public Thread train = new Thread();
	
	
	void enqueue(Client c){
		System.out.println("la");
		try {
			this.wait();
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		cq.enqueue(c);
		System.out.println("lala");
	}
	/*
	void run(){
		try {
			Thread.sleep(3000);
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
		
		
	}
	*/
		
	@Override
	void calTimeInterval(Object ob) {
		if(ob instanceof Client){
			((Client) ob).trainWaitInterval = (int) (((Client)ob).dequeueTime - ((Client)ob).enqueueTime);
		}
	}

	@Override
	void setDate(Object ob) {
		if(ob instanceof Client){
			((Client) ob).arrivalStation = new Date();
		}
	}

}
